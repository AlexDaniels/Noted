extends layout

block scripts
	link(rel='stylesheet', href='/stylesheets/index.css')

block heading
	include partials/header

block navBar
	div.container-fluid
		div.row
			div#nav.col-lg-12
				input.col-lg-3(type='text')
				label.col-lg-1='Username'
				input.col-lg-3(type='password')
				label.col-lg-1='Password'
				button.col-lg-3.col-lg-offset-1.btn.btn-lg='Login'
block page
	div.container-fluid
		div.row
			div#about.col-lg-4.col-lg-offset-1.main
				h2="About Noted"
				p="Noted is a web application for organizing your ideas. It's free to sign up and use. It was designed as a final project for Langara CPSC 2201 - Web Technology"
			div#signup.col-lg-4.col-lg-offset-2.main
				input.col-lg-12(type='text')
				label.col-lg-12='Username'
				input.col-lg-12(type='password')
				label.col-lg-12='Password'
				input.col-lg-12(type='text')
				label.col-lg-12='Email Address'
				button.col-lg-10.col-lg-offset-1.btn.btn-lg='Sign Up'
block footing
	include partials/footer